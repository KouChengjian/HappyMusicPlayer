<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent" >

    <View
        android:id="@+id/wm_main_bgview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent" />

    <RelativeLayout
        android:id="@+id/wm_main_layout"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_centerInParent="true"
        android:background="@drawable/item_group" >

        <ImageButton
            android:id="@+id/wm_item_exit"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_power_down"
            android:src="@drawable/buttombg" />

        <ImageButton
            android:id="@+id/wm_item_prev"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_player_prev_bg"
            android:src="@drawable/buttombg" />

        <ImageButton
            android:id="@+id/wm_item_play"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_player_play_bg"
            android:src="@drawable/buttombg" />

        <ImageButton
            android:id="@+id/wm_item_pause"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_player_pause_bg"
            android:src="@drawable/buttombg" />

        <ImageButton
            android:id="@+id/wm_item_home"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_home"
            android:src="@drawable/buttombg" />

        <ImageButton
            android:id="@+id/wm_item_next"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_player_next_bg"
            android:src="@drawable/buttombg" />
    </RelativeLayout>

</RelativeLayout>